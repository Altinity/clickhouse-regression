<yandex>
    <storage_configuration>
        <disks>
            <jbod1>
                <path>/jbod1/</path>
            </jbod1>
            <jbod2>
                <path>/jbod2/</path>
            </jbod2>
            <jbod3>
                <path>/jbod3/</path>
            </jbod3>
            <jbod4>
                <path>/jbod4/</path>
            </jbod4>
            <external>
                <path>/external/</path>
            </external>
            <external2>
                <path>/external2/</path>
            </external2>
        </disks>
        <policies>
            <jbod1>
                <volumes>
                    <main>
                        <disk>jbod1</disk>
                    </main>
                </volumes>
            </jbod1>
            <jbod2>
                <volumes>
                    <main>
                        <disk>jbod2</disk>
                    </main>
                </volumes>
            </jbod2>
            <jbod3>
                <volumes>
                    <main>
                        <disk>jbod3</disk>
                    </main>
                </volumes>
            </jbod3>
            <jbod4>
                <volumes>
                    <main>
                        <disk>jbod4</disk>
                    </main>
                </volumes>
            </jbod4>
            <external>
                <volumes>
                    <main>
                        <disk>external</disk>
                    </main>
                </volumes>
            </external>
            <external2>
                <volumes>
                    <main>
                        <disk>external2</disk>
                    </main>
                </volumes>
            </external2>
            <tiered_storage>
                <volumes>
                    <hot>
                        <disk>jbod1</disk>
                        <disk>jbod2</disk>
                        <max_data_part_size_bytes>2048</max_data_part_size_bytes>
                    </hot>
                    <cold>
                        <disk>external</disk>
                        <disk>external2</disk>
                    </cold>
                </volumes>
                <move_factor>0.7</move_factor>
            </tiered_storage>
        </policies>
    </storage_configuration>
</yandex>